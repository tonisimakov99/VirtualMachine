@page
@model WebApplication1.RegisterModel
@{
    ViewData["Title"] = "Register";
}
    <div class="main">
        <form method="post">
            <div asp-validation-summary="All"></div>
            <div>
                <input type="text" asp-for="Input.Login" placeholder="Login" />
                <span asp-validation-for="Input.Login" class="validation" />
            </div>
            <div>
                <input type="password" asp-for="Input.Password" placeholder="Password" />
                <span asp-validation-for="Input.Password" class="validation" />
            </div>
            <div>
                <input type="password" asp-for="Input.ConfirmPassword" placeholder="Confirm password" />
                <span asp-validation-for="Input.ConfirmPassword" />
            </div>
            <input class="button" type="submit" value="Register" />

        </form>
    </div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

